/dts-v1/;
#include <dt-bindings/gpio/gpio.h>
#include "r7s72100.dtsi"

/ {
	model = "GR Peach";
	compatible = "renesas,genmai", "renesas,r7s72100";

	aliases {
		serial2 = &scif2;
	};

	chosen {
		bootargs = "root=/dev/mtdblock4";
		stdout-path = &scif2;
	};

	memory {
		device_type = "memory";
		reg = <0x20000000 0xA00000>;
	};

	lbsc {
		#address-cells = <1>;
		#size-cells = <1>;
	};
	
	spirom: spirom@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "mtd-rom";
		reg = <0x18000000 0x800000>;
		bank-width = <4>;
		
		partition@0 {
			label = "u-boot";
			reg = <0x0000000 0x80000>;
			read-only;
		};
		
		partition@1 {
			label = "env";
			reg = <0x00080000 0x40000>;
			read-only;
		};
		
		partition@3 {
			label = "devicetree";
			reg = <0x000C0000 0x040000>;
			read-only;
		};
		
		partition@4 {
			label = "kernel";
			reg = <0x00100000 0x300000>;
			read-only;
		};
		
		partition@5 {
			label = "rootfs";
			reg = <0x00400000 0x400000>;
			read-only;
		};
	};
	
	leds {
		compatible = "gpio-leds";  
		usr {
		    label = "usr";
		    gpios = <&port6 12 0>;
		    linux,default-trigger = "heartbeat";
		    default-state = "off";
		};
		rgb_r {
		    label = "rgb_r";
		    gpios = <&port6 13 0>;
		    default-state = "off";
		};
		rgb_g {
		    label = "rgb_g";
		    gpios = <&port6 14 0>;
		    default-state = "off";
		};
		rgb_b {
		    label = "rgb_b";
		    gpios = <&port6 15 0>;
		    default-state = "off";
		};
	};
	
	
	gpio_keys_polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
       	#size-cells = <0>;
     	poll-interval = <100>;
     	autorepeat;
		button@21 {
			label = "GPIO Key UP";
			linux,code = <103>;
			gpios = <&port6 0 0>;
		};
	};
		
};

&extal_clk {
	clock-frequency = <13330000>;
};

&usb_x1_clk {
	clock-frequency = <48000000>;
};

&mtu2 {
	status = "okay";
};

&i2c3 {
	status = "okay";
	clock-frequency = <400000>;
	pinctrl-names = "default";
	pinctrl-0 = <&i2c3_pins>;
};

&scif2 {
	status = "okay";
};


&spi0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins>;
	spidev@0 {
		spi-max-frequency = <40000000>;
		reg = <0>;
		compatible = "linux,spidev";
	};
	/*spilcd@0{
		compatible = "ilitek,ili9341";
		reg = <0>;
		spi-max-frequency = <40000000>;
		rotate = <270>;
		bgr;
		buswidth = <8>;
		dc-gpios = <&port8 14 0>;
		reset-gpios = <&port8 15 0>;
	};*/
};

&spi2 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&spi2_pins>;
	mmc-slot@0 {
		compatible = "renesas, grpeachmmc","mmc-spi-slot";
		reg = <0>;
		spi-max-frequency = <40000000>;
		gpios = <&port7 8 GPIO_ACTIVE_LOW>;
		voltage-ranges = <3300 3300>;
	};
};

&ethernet {
	status = "okay";
};

&rtc {
	status = "okay";
};

&pinctrl {
		adc_pins: adc {
		renesas,pins = <RZA1PFC_PIN(1,8) RZA1PFC_MODE_ALT1 RZA1PFC_DIIO_PBDC_EN>,	/* an0 */
						<RZA1PFC_PIN(1, 9) RZA1PFC_MODE_ALT1 RZA1PFC_DIIO_PBDC_EN>,	/* an1 */
						<RZA1PFC_PIN(1,10) RZA1PFC_MODE_ALT1 RZA1PFC_DIIO_PBDC_EN>,	/* an2 */
						<RZA1PFC_PIN(1,11) RZA1PFC_MODE_ALT1 RZA1PFC_DIIO_PBDC_EN>,	/* an3 */
						<RZA1PFC_PIN(1,13) RZA1PFC_MODE_ALT1 RZA1PFC_DIIO_PBDC_EN>,	/* an5 */
						<RZA1PFC_PIN(1,15) RZA1PFC_MODE_ALT1 RZA1PFC_DIIO_PBDC_EN>;	/* an7 */											
	};
};

&adc {
	pinctrl-names = "default";
	pinctrl-0 = <&adc_pins>;
};