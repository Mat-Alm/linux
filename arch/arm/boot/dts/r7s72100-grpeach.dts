		compatible = "spi-gpio";
		#address-cells = <0x1>;
		#size-cells = <0>;

		gpio-sck = <&port8 3 0>;
		cs-gpios = <&port8 4 0>;
		gpio-mosi = <&port8 5 0>;
		gpio-miso = <&port8 6 0>;
		
		num-chipselects = <1>;

		pinctrl-names = "default";
		pinctrl-0 = <&spi2bb_pins>;

