/dts-v1/;
#include <dt-bindings/gpio/gpio.h>
#include "r7s72100.dtsi"

/ {
	model = "GR Peach";
	compatible = "renesas,genmai", "renesas,r7s72100";

	aliases {
		serial2 = &scif2;
	};

	chosen {
		bootargs = "root=/dev/mtdblock4";
		stdout-path = &scif2;
	};

	memory {
		device_type = "memory";
		reg = <0x20000000 0xA00000>;
	};

	lbsc {
		#address-cells = <1>;
		#size-cells = <1>;
	};
	
	spirom: spirom@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "mtd-rom";
		reg = <0x18000000 0x800000>;
		bank-width = <4>;
		
		partition@0 {
			label = "u-boot";
			reg = <0x0000000 0x80000>;
			read-only;
		};
		
		partition@1 {
			label = "env";
			reg = <0x00080000 0x40000>;
			read-only;
		};
		
		partition@3 {
			label = "devicetree";
			reg = <0x000C0000 0x040000>;
			read-only;
		};
		
		partition@4 {
			label = "kernel";
			reg = <0x00100000 0x300000>;
			read-only;
		};
		
		partition@5 {
			label = "rootfs";
			reg = <0x00400000 0x400000>;
			read-only;
		};
	};
	
	leds {
		compatible = "gpio-leds";  
		usr {
		    label = "usr";
		    gpios = <&port6 12 0>;
		    linux,default-trigger = "heartbeat";
		    default-state = "off";
		};
		rgb_r {
		    label = "rgb_r";
		    gpios = <&port6 13 0>;
		    default-state = "off";
		};
		rgb_g {
		    label = "rgb_g";
		    gpios = <&port6 14 0>;
		    default-state = "off";
		};
		rgb_b {
		    label = "rgb_b";
		    gpios = <&port6 15 0>;
		    default-state = "off";
		};
	};
	
	
	gpio_keys_polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
       	#size-cells = <0>;
     	poll-interval = <100>;
     	autorepeat;
		button@21 {
			label = "GPIO Key UP";
			linux,code = <103>;
			gpios = <&port6 0 0>;
		};
	};
	
	
	/*
