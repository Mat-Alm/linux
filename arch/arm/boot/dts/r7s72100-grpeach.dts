				voltage-ranges = <3300 3300>;
			};	
	};*/
	
};

&extal_clk {
	clock-frequency = <13330000>;
};

&usb_x1_clk {
	clock-frequency = <48000000>;
};

&mtu2 {
	status = "okay";
};

&i2c3 {
	status = "okay";
	clock-frequency = <400000>;
	pinctrl-names = "default";
	pinctrl-0 = <&i2c3_pins>;
};

&scif2 {
	status = "okay";
};

&spi0 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins>;
	spidev@0 {
		spi-max-frequency = <24000000>;
		reg = <0>;
		compatible = "linux,spidev";
	};
};

&spi2 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&spi2_pins>;
	mmc-slot@0 {
				compatible = "renesas, grpeachmmc","mmc-spi-slot";
				reg = <0>;
				spi-max-frequency = <10000000>;
				gpios = <&port7 8 GPIO_ACTIVE_LOW>;
				voltage-ranges = <3300 3300>;
			};
};
