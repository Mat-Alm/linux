#include "infinity.dtsi"

/ {
};

&cpus {
	cpu1: cpu@1 {
		device_type = "cpu";
		compatible = "arm,cortex-a7";
		reg = <0x1>;
		clocks = <&cpuclk>;
		clock-names = "cpuclk";
	};
};

&soc {
	//start address for second cpu
	//0x1F20404C
	//0x1F204050
	//0x1F204058 -- unlock
};

&riu {
	smpctrl@204000 {
		compatible = "mstar,smpctrl";
		reg = <0x204000 0x200>;
		status = "okay";
	};
};

&bdma {
	reg = <0x200400 0x100>;
	interrupt-parent = <&intc_irq>;
	interrupts = <40 IRQ_TYPE_LEVEL_HIGH>,
		     <41 IRQ_TYPE_LEVEL_HIGH>,
		     <61 IRQ_TYPE_LEVEL_HIGH>,
		     <62 IRQ_TYPE_LEVEL_HIGH>;
};
